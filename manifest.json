{
  "name": "myBucknell Helper",
  "description": "myBucknell All In One",
  "version": "0.2.2",
  "permissions": [
    "activeTab"	
  ],
  "content_scripts": [
    {
      "matches": ["https://cas.bucknell.edu/cas/*"],
      "js": ["content_script.js"]
    }	
  ],
  "icons": { "128": "Bucknell_128x128.png" },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Go Bison!",
	"default_icon": "Bucknell_16x16.png",
	"default_popup": "popup.html"
  },
  "short_name": "myBucknell",
  "options_page": "options.html",
  "manifest_version": 2
}
